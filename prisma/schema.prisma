// 1. データベース接続設定
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. クライアント生成設定
generator client {
  provider = "prisma-client-js"
}

// ==========================================
//  ユーザーとあかりのデータモデル
// ==========================================

// ユーザー（ご主人様）のモデル
model User {
  id            String    @id @default(cuid())
  name          String?   // Googleアカウントの名前
  email         String?   @unique
  emailVerified DateTime?
  image         String?   // Googleアイコン画像

  // ▼ アプリ専用設定（あかりとの関係性）
  customName    String?   @default("ご主人様") // あかりからの呼び名
  currentOutfit String    @default("maid")     // 今の衣装 (maid, swim, bunny, santa)
  currentEvent  String?                        // 今発生中のイベント画像

  // ▼ 追加：新機能用ステータス
  affection       Int       @default(0)           // 親密度（100以上でラブラブモード）
  points          Int       @default(0)           // 所持ポイント（プレゼント購入用）
  lastLoginAt     DateTime  @default(now())       // 最終ログイン日時（ログボ判定用）

  // ★★★ 追加：長期記憶（あかりのメモ帳） ★★★
  memory          String?   @db.Text              

  // ▼ 料金プラン・課金情報
  plan              Plan      @default(FREE)    // プラン (FREE, PRO, ROYAL)
  subscriptionId    String?                     // StripeのサブスクID
  stripeCustomerId  String?                     // Stripeの顧客ID
  purchasedTickets  Int       @default(0)       // 追加購入した会話チケット残数

  // ▼ リレーション（紐付け）
  accounts      Account[]
  sessions      Session[]
  messages      Message[]

  createdAt     DateTime  @default(now())       // 初めて会った日
  updatedAt     DateTime  @updatedAt            // 最後に更新した日
}

// メッセージ（会話ログ）のモデル
model Message {
  id        String   @id @default(cuid())
  role      String   // "user" or "assistant"
  content   String   // 会話内容
  emotion   String?  // あかりの感情 (smile, shy, etc...) 
   
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
   
  createdAt DateTime @default(now()) // 話した時間
}

// プランの定義（3段階）
enum Plan {
  FREE   // 無料：1日20回
  PRO    // 一般：1日200回 ＋ 衣装変更
  ROYAL  // VIP：1日2500回 ＋ 全機能
}

// ==========================================
//  NextAuth（Googleログイン）必須モデル
// ==========================================

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}